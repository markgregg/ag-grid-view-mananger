{
  "name": "ag-grid-view-manager",
  "version": "0.1.0",
  "description": "View management and persistence for Ag-Grid",
  "type": "module",
  "keywords": [
    "react",
    "view",
    "view management",
    "persistence",
    "ag-grid",
    "aggrid"
  ],
  "author": "Mark Gregg <gregg.mark@gmail.com> (https://github.com/markgregg)",
  "license": "MIT",
  "main": "dist/ag-grid-view-manager.min.js",
  "main::production": "dist/ag-grid-view-manager.min.js",
  "main::development": "dist/ag-grid-view-manager.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --mode debug && vite build --emptyOutDir false",
    "build:prod": "tsc && vite build --mode production && vite build --emptyOutDir false",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prettier": "prettier --write src",
    "test": "vitest run --coverage --reporter=default --reporter=junit --outputFile=junit.xml",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.5",
    "@nabla/vite-plugin-eslint": "2.0.4",
    "@rollup/plugin-babel": "^6.0.4",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "ag-grid-community": "30.2.0",
    "ag-grid-react": "30.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss-nesting": "^12.1.3",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.2.1",
    "react-smart-search": "0.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vitest": "^1.6.0"
  }
